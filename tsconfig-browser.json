{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Browser",
  "compilerOptions": {
    "lib": ["es6", "DOM", "WebWorker"],
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }, 
  "include": [
    "./browser/**/*.ts"
  ]
}
